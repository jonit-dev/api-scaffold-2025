# Test Environment Variables
NODE_ENV=test

# Database Provider Configuration  
# Use SQLite for tests to avoid external dependencies
DATABASE_PROVIDER=sqlite

# Authentication Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only
BCRYPT_ROUNDS=4

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Application Configuration
PORT=3001
APP_NAME=API Scaffold Test
APP_VERSION=1.0.0
APP_ENVIRONMENT=test

# Test Database Configuration (in-memory SQLite for testing)
DATABASE_URL="file::memory:?cache=shared"

# Email Configuration (mocked in tests)
EMAIL_FROM=test@example.com
EMAIL_SERVICE=test
EMAIL_API_KEY=test_key

# Stripe Configuration (test keys)
STRIPE_PUBLISHABLE_KEY=pk_test_test
STRIPE_SECRET_KEY=sk_test_test
STRIPE_WEBHOOK_SECRET=whsec_test
STRIPE_API_VERSION=2023-10-16

# Redis Configuration (mocked in tests)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Payment Configuration
DEFAULT_CURRENCY=usd
MAX_PAYMENT_AMOUNT=100000
MIN_PAYMENT_AMOUNT=50
AUTO_CAPTURE_PAYMENTS=true

# Subscription Configuration  
DEFAULT_TRIAL_DAYS=14
ALLOW_MULTIPLE_SUBSCRIPTIONS=false
PRORATION_BEHAVIOR=create_prorations
GRACE_PERIOD_DAYS=3
MAX_RETRY_ATTEMPTS=3

# Webhook Configuration
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=1000

# Transactional Emails (test configuration)
RESEND_API=re_test_key
RESEND_EMAIL_FROM_ADDRESS=test@resend.dev
RESEND_EMAIL_FROM_NAME=TestApp

# Logging Configuration
LOG_LEVEL=error

# Rate Limiting (disabled for tests)
RATE_LIMIT_ENABLED=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Middleware Configuration (disabled for tests)
ENABLE_SECURITY_MIDDLEWARE=false
ENABLE_COMPRESSION_MIDDLEWARE=false
ENABLE_MORGAN_LOGGING=false

# Testing specific
TEST_TIMEOUT=10000