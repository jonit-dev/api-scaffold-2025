# Server Configuration
PORT=3000
NODE_ENV=development

# Database Provider Configuration
# Choose between 'sqlite' or 'supabase'
# For quick setup, use 'sqlite' (no additional configuration needed)
# For production, consider 'supabase' with proper credentials below
DATABASE_PROVIDER=sqlite

# Authentication Configuration (REQUIRED)
# Generate a strong JWT secret for production: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=10

# Frontend Configuration (for password reset redirects)
FRONTEND_URL=http://localhost:3000

# SQLite Database Configuration (when DATABASE_PROVIDER=sqlite)
# SQLite database file will be created automatically at ./data/database.sqlite

# Database Configuration (Supabase - when DATABASE_PROVIDER=supabase)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Database Configuration (optional)
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=30000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Middleware Configuration
ENABLE_SECURITY_MIDDLEWARE=true
ENABLE_COMPRESSION_MIDDLEWARE=true
ENABLE_MORGAN_LOGGING=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=false
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14
ENABLE_LOG_ROTATION=true


# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here

# Email Configuration (if using)
EMAIL_FROM=noreply@yourapp.com
EMAIL_SERVICE=your_email_service_here
EMAIL_API_KEY=your_email_api_key_here

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_API_VERSION=2023-10-16

# Payment Configuration
DEFAULT_CURRENCY=usd
MAX_PAYMENT_AMOUNT=100000
MIN_PAYMENT_AMOUNT=50
AUTO_CAPTURE_PAYMENTS=true

# Subscription Configuration
DEFAULT_TRIAL_DAYS=14
ALLOW_MULTIPLE_SUBSCRIPTIONS=false
PRORATION_BEHAVIOR=create_prorations
GRACE_PERIOD_DAYS=3
MAX_RETRY_ATTEMPTS=3

# Webhook Configuration
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=1000

# Transactional Emails
RESEND_API=XXX
RESEND_EMAIL_FROM_ADDRESS=onboarding@resend.dev
RESEND_EMAIL_FROM_NAME=MyApp
